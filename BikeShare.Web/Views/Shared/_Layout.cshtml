<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - BikeShare</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />
</head>
<body>

<header>
    <nav class="navbar">
        <div class="navbar-container">
            <a class="nav-home" asp-area="" asp-controller="Home" asp-action="Index">BikeShare</a>

            
            <div style="flex-grow: 1"></div>
            @if (User.Identity!.IsAuthenticated)
            {
                <div class="nav-user">
                    <span class="nav-username">@User.Identity.Name</span>
                    <form asp-action="Logout" method="POST">
                        <button class="nav-logout" type="submit">Log out</button>
                    </form>
                </div>
            }
            else
            {
                <form>
                    <button class="nav-login" type="submit" asp-controller="Auth" asp-action="Login">Log in</button>
                </form>
            }
            
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

@* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
@* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
@* <script src="~/js/site.js" asp-append-version="true"></script> *@
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>