@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    ViewData["HideNav"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/form.css" />
}

<div class="form">
    <h1 class="title">Login</h1>
    <h2 class="subtitle">Log in to your account.</h2>
    @if (ViewBag.Error != null)
    {
        <h3>
            @ViewBag.Error
        </h3>
    }

    <form asp-action="Login" method="POST">
        <div>
            <input type="text" asp-for="Username" placeholder="Username" />
            <span asp-validation-for="Username"></span>
        </div>
        <div>
            <input type="password" asp-for="Password" placeholder="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="RememberMe">Remember me</label>
            <input type="checkbox" asp-for="RememberMe"/>
        </div>
        
        <input asp-for="ReturnUrl" type="hidden" />
        <button type="submit">Login</button>
    </form>

    <p>
        Don't have an account? <a asp-controller="Auth" asp-action="Register">Register here</a>.
    </p>
</div>